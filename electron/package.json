{
  "name": "nts-web",
  "version": "2.0.4",
  "description": "NTS-1 web based editor and controller",
  "homepage": "nts-web.oscarrc.me",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "electron-builder build -wl --x64 --ia32 --armv7l --arm64",
    "electron:build-windows": "npm run build && electron-builder build --windows",
    "electron:build-linux": "npm run build && electron-builder build --linux"
  },
  "dependencies": {
    "@capacitor-community/electron": "^1.3.1"
  },
  "devDependencies": {
    "electron": "~10.3.1",
    "electron-builder": "^22.9.1",
    "typescript": "~4.0.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": {
    "name": "Oscar R.C.",
    "email": "oscarrc.web@gmail.com"
  },
  "license": "MIT",
  "build": {
    "appId": "me.oscarrc.nts-web",
    "productName": "NTS-web",
    "asar": true,
    "files": [
      "assets/*",
      "build/*",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap",
        "tar.gz"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "assets/appIcon.png"
    },
    "win": {
      "target": [
        "appx",
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "assets/appIcon.ico"
    }
  }
}
